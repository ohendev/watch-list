<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1625&q=80);">
  <div class="container">
    <%= image_tag "logo.png", height: "100" %>
    <h1 id="show-h1" class="mb-5"><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list.id), class: "btn btn-gradient" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-gradient" %>
  </div>
</div>
<div class="container mt-5">
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card-product">
        <% bookmark = movie.bookmarks.find { |bookmark| bookmark.movie_id == movie.id && bookmark.list_id == @list.id } %>
        <%= link_to 'delete', bookmark_path(bookmark.id), method: :delete %>
        <img src="<%= movie.poster_url %>" />
        <div class="card-product-infos">
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
          <p class="comment"><%= bookmark.comment %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

